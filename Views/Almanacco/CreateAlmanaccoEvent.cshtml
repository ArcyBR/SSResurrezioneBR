@model CreateEventAlmanaccoInputModel

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <input type="text" asp-for="Titolo_Almanacco" class="form-control form-control-lg" placeholder="Inserisci il titolo dell'evento">
            <input type="hidden" asp-for="Chiamante" value="Almanacco">
             <span asp-validation-for="Titolo_Almanacco"></span>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fas fa-rocket"></i> Crea</button>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_Validation"></partial>
}